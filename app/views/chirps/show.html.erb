<h2><%= @chirp.formatted_time %></h2>
<h3><%= @chirp.content %></h3>
<%= link_to("Edit Chirp", "/chirps/#{@chirp.id}/edit", class: "btn btn-primary") %>
<%= link_to("Delete Chirp", "/chirps/#{@chirp.id}", method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: "btn btn-danger") %>
<% if user_signed_in? %>
  <%= form_tag("/chirps/#{@chirp.id}/comments", method: :post) do %>
  <div class="form-group">
    <%= label_tag(:content, "Leave a comment:") %>
    <%= text_area_tag(:content, nil, class: "form-control") %>
  </div>
    <%= submit_tag("Add comment", class: "btn btn-success") %>
  <% end %>
<% end %>

<h4>Comments:</h4>
<% @chirp.comments.each do |comment| %>
  <p><%= comment.content %></p>
  <%= link_to("Delete Comment", "/chirps/#{@chirp.id}/comments/#{comment.id}", method: :delete, class: "btn btn-danger") %>
<% end %>